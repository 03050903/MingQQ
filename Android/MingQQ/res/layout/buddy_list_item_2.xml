<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/group_list_subitem_style"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/blistitem2_imgAvatar"
        android:contentDescription="@string/app_name"
        android:layout_width="@dimen/BList_cxAvatar"
        android:layout_height="@dimen/BList_cyAvatar"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:focusable="false"
        android:layout_gravity="center_vertical" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/blistitem2_txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="42dp"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="@drawable/btn_color2" />

        <TextView
            android:id="@+id/blistitem2_txtDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="42dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="12sp"
            android:textColor="@drawable/btn_color3" />
        
    </LinearLayout>

</LinearLayout>