<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >
    
	<LinearLayout 
    	android:id="@+id/setting_item_bg"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
    	android:orientation="horizontal" >
    	
		<FrameLayout 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" >
        
			<ImageView
				android:id="@+id/setting_item_imgAvatar"
				android:contentDescription="@string/app_name"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:layout_marginTop="11dp"
				android:layout_marginBottom="11dp"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp"
				android:background="@drawable/h001" />

			<ImageView
				android:id="@+id/setting_item_imgState"
				android:contentDescription="@string/app_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="bottom|right"
				android:layout_marginBottom="11dp"
				android:layout_marginRight="10dp"
				android:background="@drawable/status_online_btn_2" />
		
		</FrameLayout>
    
    	<LinearLayout 
    	   	android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:layout_gravity="center_vertical" 
			android:gravity="center_vertical"
			android:orientation="vertical" >
    	
    	    <TextView
				android:id="@+id/setting_item_txtName"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:textColor="@drawable/btn_color2"
				android:textSize="16sp" />
			
			<LinearLayout 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal" >
    	
    	    	<ImageView
    	        	android:contentDescription="@string/app_name"
					android:layout_width="16dp"
					android:layout_height="16dp"
					android:layout_marginRight="2dp"
					android:background="@drawable/qq_profilecard_qqlevel_sun" />
    	    
    	    	<ImageView
    	        	android:contentDescription="@string/app_name"
					android:layout_width="16dp"
					android:layout_height="16dp"
					android:layout_marginRight="2dp"
					android:background="@drawable/qq_profilecard_qqlevel_moon" />
    	    
    	    	<ImageView
    	        	android:contentDescription="@string/app_name"
					android:layout_width="16dp"
					android:layout_height="16dp"
					android:layout_marginRight="2dp"
					android:background="@drawable/qq_profilecard_qqlevel_star" />
    	    
    	    </LinearLayout>
    	</LinearLayout>
    
    	<ImageView
    	    android:contentDescription="@string/app_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginRight="10dp"
			android:src="@drawable/listitem_arrow_style" />

    </LinearLayout>
</LinearLayout>