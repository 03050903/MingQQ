<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <FrameLayout
        android:id="@+id/main_frmContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:baselineAligned="true"
        android:background="@drawable/skin_bottom_bar_background" >

        <FrameLayout
            android:id="@+id/main_layMsg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ImageView
				android:id="@+id/main_imgMsg"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:src="@drawable/skin_tab_icon_conversation_normal" />
            
			<TextView
				android:id="@+id/main_txtUnreadMsgCnt"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="top|right"
				android:layout_marginTop="1dp"
				android:layout_marginRight="15dp"
				android:gravity="center"
				android:singleLine="true"
				android:text="99+"
				android:textSize="@dimen/unreadmsgcnt_textsize"
				android:textColor="#FFFFFF"
				android:background="@drawable/skin_tab_newmessage2" />
            
        </FrameLayout>

        <FrameLayout
            android:id="@+id/main_layContacts"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ImageView
				android:id="@+id/main_imgContacts"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:src="@drawable/skin_tab_icon_contact_normal" />
            
        </FrameLayout>

        <FrameLayout
            android:id="@+id/main_layNews"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ImageView
				android:id="@+id/main_imgNews"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:src="@drawable/skin_tab_icon_plugin_normal" />
            
        </FrameLayout>

        <FrameLayout
            android:id="@+id/main_laySetting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ImageView
				android:id="@+id/main_imgSetting"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:src="@drawable/skin_tab_icon_setup_normal" />
            
        </FrameLayout>
    </LinearLayout>

</LinearLayout>
